from textblob import TextBlob
import pandas as pd
from sklearn.metrics import classification_report, confusion_matrix, ConfusionMatrixDisplay
import matplotlib.pyplot as plt

def analyze_sentiment(text):
    """Analyzes the sentiment of a given text and returns 'positive', 'negative', or 'neutral'."""
    blob = TextBlob(text)
    polarity = blob.sentiment.polarity
    if polarity > 0:
        return "positive"
    elif polarity < 0:
        return "negative"
    else:
        return "neutral"

def generate_response(user_input):
    """Generates a chatbot response based on the sentiment of the user's input."""
    sentiment = analyze_sentiment(user_input)
    if sentiment == "positive":
        return "ðŸ˜Š I'm glad to hear that!"
    elif sentiment == "negative":
        return "ðŸ˜” I'm sorry to hear that. Is there anything I can do to help?"
    else:
        return "ðŸ¤” Got it! Let me know if you'd like to talk more."


